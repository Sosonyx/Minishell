{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "build",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "${workspaceFolder}/srcs/*.c",
                "${workspaceFolder}/srcs/built-in/*.c",
                "${workspaceFolder}/srcs/error_and_event_manager/*.c",
                "${workspaceFolder}/srcs/exec/*.c",
                "${workspaceFolder}/srcs/exec/command_build/*.c",
                "${workspaceFolder}/srcs/exec/redirections/*.c",
                "${workspaceFolder}/srcs/lexer/*.c",
                "${workspaceFolder}/srcs/lexer/utils/*.c",
                "${workspaceFolder}/srcs/parsing/*.c",
                "${workspaceFolder}/srcs/parsing/expander/*.c",
                "${workspaceFolder}/srcs/shell/*.c",
                "${workspaceFolder}/srcs/wildcards/*.c",
                "${workspaceFolder}/srcs/wildcards/utils/*.c",
                "${workspaceFolder}/libft/libft.a",
                "-I",
                "${workspaceFolder}/includes",
                "-I",
                "${workspaceFolder}/libft/",
                "-lreadline",
                "-lncurses",
                "-o",
                "${workspaceFolder}/minishell"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cc build active file",
            "command": "/usr/bin/cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "label": "wildcd",
            "type": "shell",
            "command": "gcc",
            "args": [
                "-g3",
                "${workspaceFolder}/wildcards/*.c",
                "${workspaceFolder}/libft/libft.a",
                "-I",
                "${workspaceFolder}/includes",
                "-I",
                "${workspaceFolder}/libft/",
                "-lreadline",
                "-lncurses",
                "-o",
                "${workspaceFolder}/wildcards/wilc"
            ],
            "group": "build",
            "problemMatcher": [
                "$gcc"
            ]
        },
        {
            "type": "cppbuild",
            "label": "C/C++: cc build active file",
            "command": "/usr/bin/cc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": "build",
            "detail": "Task generated by Debugger."
        },
        {
            "type": "cppbuild",
            "label": "C/C++: gcc build active file",
            "command": "/usr/bin/gcc",
            "args": [
                "-fdiagnostics-color=always",
                "-g",
                "${file}",
                "-o",
                "${fileDirname}/${fileBasenameNoExtension}"
            ],
            "options": {
                "cwd": "${fileDirname}"
            },
            "problemMatcher": [
                "$gcc"
            ],
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "detail": "Task generated by Debugger."
        }
    ]
}